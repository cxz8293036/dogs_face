html {
  height: 100%;
  width: 100%;
}
html body {
  height: 100%;
  width: 100%;
}
.content {
  width: 100%;
  background: #ffffff;
  height: 100%;
  display: flex;
  flex-flow: column;
  flex: 10;
}
.content header {
  width: 100%;
  flex: 1;
  justify-content: flex-start;
}
.content header .header {
  width: 100%;
  height: 100%;
  display: flex;
  flex-flow: column;
  justify-content: flex-end;
}
.content article {
  flex: 8;
  overflow-y: auto;
}
.content footer {
  width: 100%;
  flex: 1;
  justify-content: flex-end;
  border-top: 1px solid #cccccc;
  position: relative;
}
.content footer .circle {
  position: absolute;
  top: -50%;
  left: 50%;
  transform: translatex(-50%);
  width: 20%;
  border-radius: 50%;
  border-top: 1px solid #cccccc;
  background: #ffffff;
}
.header_main {
  display: flex;
  justify-content: space-between;
  height: 50%;
}
.header_main .inp {
  width: 76%;
  border-radius: 5px;
  background: #f5f5f9;
  display: flex;
}
.header_main .inp input {
  background: #f5f5f9;
  width: 100%;
}
.header_main .headIcon {
  width: 12%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.header_main .headIcon img {
  width: 20px;
}
.foot_menu {
  width: 100%;
  height: 100%;
  display: flex !important;
  align-items: center;
}
.foot_menu li {
  width: 20%;
  height: 80%;
}
.foot_menu li .li_label {
  width: 100%;
  height: 100%;
  display: flex !important;
  flex-flow: column;
  align-items: center;
  justify-content: flex-end;
}
.foot_menu li .li_label img {
  width: 45%;
}
.foot_menu li .li_label span {
  margin-top: 2px;
  vertical-align: bottom;
}
.foot_menu .centerLi {
  position: relative;
}
.foot_menu .centerLi .centerPic {
  position: absolute;
  width: 80%;
  top: -60%;
}
